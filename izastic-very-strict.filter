Show # Item Level 82+
	Mirrored False
	Corrupted False
	ItemLevel >= 82
	SetFontSize 40
	SetBorderColor 0 240 190
	Continue

Show # Corrupted
	Corrupted True
	Rarity Normal Magic Rare
	SetBorderColor 150 0 0 255
	Continue

Show
	Rarity Normal Magic Rare
