#   Items
#===============================================================================================================

Hide
	Class "Flasks" "Life Flasks" "Mana Flasks"
	DisableDropSound True

Hide
	ItemLevel <= 82
	Rarity Normal Magic
	Class "Claws" "Daggers" "Wands" "One Hand Swords" "One Hand Axes" "One Hand Maces" "Sceptres" "Spears" "Flails" "Bows" "Staves" "Two Hand Swords" "Two Hand Axes" "Two Hand Maces" "Quarterstaves" "Crossbows" "Traps" "Quivers" "Shields" "Foci" "Gloves" "Boots" "Body Armours" "Helmets" "Amulets" "Rings" "Belts" "Flasks" "Life Flasks" "Mana Flasks" "Charms" "Jewels"
	DisableDropSound True

Show
	Rarity Normal Magic Rare
	SetFontSize 30
	Continue

Show # Sockets
	Sockets = S
	SetFontSize 35
	Rarity Normal Magic
	SetBorderColor 255 255 255 255
	PlayEffect White
	Continue

Show # Quality
	Quality >= 5
	SetFontSize 35
	Rarity Normal Magic
	SetBorderColor 255 255 255 255
	PlayEffect White
	Continue

Show # Rare Jewel
	Class "Jewel"
	Rarity Rare
	SetFontSize 35
	SetBorderColor 0 240 190
